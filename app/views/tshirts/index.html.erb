<p id="notice"><%= notice %></p>

<h2>Selection</h2>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Color</th>
      <th>Stock</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tshirts.each do |tshirt| %>
      <tr>
        <td><%= tshirt.size %></td>
        <td><%= tshirt.color %></td>
        <td><%= tshirt.stock %></td>
        <td><%= tshirt.price %></td>
        <td><%= link_to 'Show', tshirt %></td>
        <td><%= link_to 'Edit', edit_tshirt_path(tshirt) %></td>
        <td><%= link_to 'Destroy', tshirt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tshirt', new_tshirt_path %>
